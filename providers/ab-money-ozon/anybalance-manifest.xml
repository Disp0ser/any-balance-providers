<?xml version="1.0" encoding="utf-8"?>
<provider>
	<api flags="no_browser" />
	<id version="1">ab-money-ozon</id>
	<name>Ozon card</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о баланcе на карте Ozon.Card https://card.ozon.ru .</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
		<module id="crypt/md5"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Остаток" units=" р"/>
		<counter id="bonus" name="Бонусы" units="Б"/>
		<counter id="bonus_delay" name="Бонусов в ожидании" units="Б"/>
		<counter id="bonus_available" name="Бонусов доступно" units="Б"/>
		<counter id="limit" name="Кредитный лимит" units=" р"/>
		<counter id="own" name="Собственные средства" units=" р"/>
		<counter id="bonus_debt" name="Долг бонусов" units="Б"/>
		<counter id="num" name="Номер карты" type="text"/>
		<counter id="till" name="Срок действия" type="time" format="MM/yy"/>
	</counters>
	<keywords>озон карта</keywords>
	<type>bonus, money, bank</type>
	<country>ru</country>
</provider>